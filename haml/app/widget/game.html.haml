<game:>
%a(class="widget-game {status(:game.start, _cd[:game.id], _rendered)}" href="/game/{:game.id}")
  %div(class="name")
    {:game.lang}
    %div(class="status") {statusText(:game.start, _timeDiff, _cd[:game.id], :game.id, _rendered)}
  .players
    {#each :game.players as :player}
    .player
      %div(class="char small {:player.char}")
      .name {:player.name}
    {/}